<!DOCTYPE html>
<html>
  <head>
    <title>ShareFile</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark nav-bar-color-overrride">
      <%= link_to(root_path, html_options = {class: 'navbar-brand'}) do %>
        <img src="<%= image_url('logo.png') %>" width="30" height="30" alt="logo">
      <% end %>
      <%= link_to "ShareFiles", root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "Upload", uploads_path, class: "nav-link" %>
          </li>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
<script>
  $('.nav-link').on('click', function(){
    $('.nav-item').removeClass('active');
    $(this).parent().addClass('active');
  })
</script>